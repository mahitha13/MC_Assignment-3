<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahitha.assignment_3.BlogHome"
    android:background="@drawable/bg_2"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVwelcome"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="20dp"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:id="@+id/Blogout"
                android:background="#00dd736e"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/TVbody" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new public blog"
            android:id="@+id/Bpermblog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new private blog"
            android:id="@+id/Btempblog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A public blog will be stored on your device and will remain there even after you delete the app whereas a private blog will be deleted from your device once you delete the app."
            android:id="@+id/textView4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:id="@+id/Bupdate"
                android:background= "#90dd736e"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:id="@+id/Bdelete"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_toEndOf="@id/Bupdate"
                android:background="#90dd736e"
                android:layout_margin="5dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>